<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".EditTeam">

    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:inputType="time"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/referee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/referee" />

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="241dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frameLayout">

    </LinearLayout>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="37dp"
        android:backgroundTint="#044404"
        android:enabled="true"
        android:foreground="@drawable/baseline_done_black_18dp"
        android:onClick="toFinalScreen"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pitch_imageView"
            android:layout_width="415dp"
            android:layout_height="610dp"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            android:src="@drawable/pitch"
            app:srcCompat="@mipmap/ic_launcher" />

    </FrameLayout>


    <Button
        android:id="@+id/backButton"
        android:layout_width="94dp"
        android:layout_height="59dp"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="33dp"
        android:backgroundTint="#C91608"
        android:enabled="true"
        android:foreground="@drawable/baseline_keyboard_arrow_left_black_18dp"
        android:onClick="back"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

