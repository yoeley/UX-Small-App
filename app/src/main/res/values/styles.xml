<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">#000000</item>
        <!--        <item name="android:fontFamily">@font/droid_sans</item>-->
    </style>

    <style name="DatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/date_picker_accent</item>
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
    </style>

    <style name="DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/date_picker_accent</item>
        <item name="colorAccent">@color/date_picker_accent</item>
        <item name="android:windowBackground">@color/date_picker_accent</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="TimePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/time_picker_accent</item>
        <item name="android:datePickerStyle">@style/TimePickerStyle</item>
    </style>

    <style name="TimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@color/date_picker_accent</item>
        <item name="colorAccent">@color/time_picker_accent</item>
        <item name="android:windowBackground">@color/time_picker_accent</item>
        <item name="android:timePickerMode">@string/spinner_mode</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <string name="spinner_mode">1</string>
</resources>
